<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nombreIncidencia"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="Nombre"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Alexander Pierrot" />

    <TextView
        android:id="@+id/id_incidencia"
        android:layout_width="166dp"
        android:layout_height="34dp"
        android:layout_below="@+id/nombreIncidencia"
        android:layout_alignLeft="@+id/nombreIncidencia"
        android:layout_marginLeft="177dp"
        android:layout_marginTop="-16dp"
        android:text="Cargo"
        android:textSize="14sp"
        tools:text="CEO" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_incidencia"
        android:layout_alignLeft="@+id/nombreIncidencia"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-14dp"
        android:text="Compañía"
        android:textSize="12sp"
        tools:text="Blue Insurances Ltd" />

</RelativeLayout>